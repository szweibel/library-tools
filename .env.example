# Library Tools Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# PRIMO CATALOG SEARCH
# ============================================================================
# Required for search_primo tool
# Get credentials from Ex Libris Developer Network

PRIMO_API_KEY=your_primo_api_key_here
PRIMO_VID=01YOURSCHOOL:VIEW
PRIMO_SCOPE=Everything

# Optional - only needed if using non-standard endpoint
# PRIMO_BASE_URL=https://api-na.hosted.exlibrisgroup.com/primo/v1/search


# ============================================================================
# OPENALEX ACADEMIC SEARCH
# ============================================================================
# Optional but recommended for better rate limits
# No API key required - OpenAlex is free!

OPENALEX_EMAIL=your.email@institution.edu


# ============================================================================
# LIBGUIDES (SpringShare)
# ============================================================================
# Required for search_databases and search_guides tools
# Get credentials from LibApps admin panel

LIBGUIDES_SITE_ID=12345
LIBGUIDES_CLIENT_ID=your_client_id_here
LIBGUIDES_CLIENT_SECRET=your_client_secret_here

# Optional - only needed for custom endpoints
# LIBGUIDES_BASE_URL=https://lgapi-us.libapps.com/1.2


# ============================================================================
# INSTITUTIONAL REPOSITORY (bePress/Digital Commons)
# ============================================================================
# Required for repository search tools
# Get credentials from your Digital Commons admin

REPOSITORY_BASE_URL=https://content-out.bepress.com/v2/academicworks.institution.edu
REPOSITORY_API_KEY=your_repository_api_key_here


# ============================================================================
# WORLDCAT / OCLC
# ============================================================================
# Required for WorldCat search tools
# Get credentials from OCLC Developer Network (https://platform.worldcat.org/wskey/)

OCLC_CLIENT_ID=your_oclc_client_id_here
OCLC_CLIENT_SECRET=your_oclc_client_secret_here

# Optional - your institution's OCLC symbol (default: CNY)
# OCLC_INSTITUTION_ID=CNY


# ============================================================================
# NOTES
# ============================================================================
# - All settings are optional - only configure the services you plan to use
# - Each tool will validate its required settings when initialized
# - Keep this file secure - do not commit .env to version control
# - See README.md for detailed configuration instructions
